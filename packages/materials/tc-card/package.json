{
  "name": "tc-card",
  "version": "0.1.0",
  "description": "Card component for Vue.js.",
  "main": "dist/tc-card.common.js",
  "module": "dist/tc-card.ems.js",
  "browser": "dist/tc-card.js",
  "style": "dist/tc-card.css",
  "types": "types/index.d.ts",
  "license": "MIT",
  "repository": "",
  "author": {
    "name": "Chen Fengyuan",
    "email": "chenfengyuan@outlook.com",
    "url": "http://chenfengyuan.com"
  },
  "files": ["src", "dist", "types"],
  "keywords": ["travel cart", "card", "vue", "vue-component", "components", "ui", "framework", "web", "front-end"],
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:css": "postcss src/index.css -o dist/tc-card.css --no-map",
    "build:js": "webpack --env.production --config ../../webpack.config.js",
    "clear": "rimraf dist",
    "compress": "npm run compress:js && npm run compress:css",
    "compress:css": "postcss dist/tc-card.css -u cssnano -o dist/tc-card.min.css --no-map",
    "compress:js": "webpack --env.production --env.minify --config ../../webpack.config.js",
    "lint": "npm run lint:es && npm run lint:ts",
    "lint:es": "eslint src test --ext .js,.jsx,.vue --fix",
    "lint:ts": "tslint src/**/*.ts --fix",
    "postbuild": "npm run compress",
    "prebuild": "npm run clear",
    "release": "npm run lint && npm run build && npm test",
    "test": "karma start ../../karma.config.js"
  },
  "devDependencies": {},
  "peerDependencies": {
    "vue": "^2.4.0"
  }
}
